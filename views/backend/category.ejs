<%- include('header')%>


    <div class="container mt-4">
        <div class="row">
            <div class="col-6">
                <a href="/sayem/admin/home" class="btn btn-primary">back Home</a></div>
        </div>
    </div>
   

    <div class="container mt-4">
        <div class="row">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Category</th>
                        <th scope="col">Create</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>

                <tbody>
                    <% if(data.length>0){
                        data.forEach((row,index)=>{ %>
                            <tr>
                                <th scope="row"><%= index+1 %></th>
                                <td><%= row.category %></td>
                                <td>
                                    <a href="/sayem/admin/category/post/<%= row._id%>" class="btn btn-info btn-x5">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                                <td>
                                    <a href="/sayem/admin/category/edit/<%= row._id%>" class="btn btn-primary btn-x5">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </td>
                                <td>
                                    <a href="/sayem/admin/category/delete/<%= row._id%>" class="btn btn-danger btn-x5">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>

                      <%  })
                    } %>
                </tbody>
            </table>
        </div>
    </div>




    <%- include('footer')%>